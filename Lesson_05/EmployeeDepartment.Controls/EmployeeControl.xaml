        <TextBox x:Name="tbLastName" Margin="130,16,11,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="label_Copy" Content="Фамилия" Margin="10,12,84,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbFirstName" Margin="130,51,11,0" TextWrapping="Wrap" Grid.ColumnSpan="2" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy1" Content="Имя" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Width="113"/>
        <TextBox x:Name="tbSecondName" Margin="130,85,11,0" TextWrapping="Wrap" Grid.ColumnSpan="2" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy2" Content="Отчество" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Width="113"/>

    </Grid>
</UserControl>
